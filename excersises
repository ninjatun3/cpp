#создание класса 

class User():
    
    def __init__(self, first_name, last_name, age, country):
    	self.first_name = first_name
    	self.last_name = last_name
    	self.age = age
    	self.country = country
    
    def describe_user(self):
        if self.age  >0  and self.age <=1:
            print(f"Hi, my name is {self.first_name} {self.last_name}, i'm from {self.country} and {self.age} year old")
        elif self.age >1:
            print(f"Hi, my name is {self.first_name} {self.last_name}, i'm from {self.country} and {self.age} years old")
        else:
			
		print("please enter valid age")
