# создание класса
class User():

    def __init__(self, first_name, last_name, age, country):
        self.first_name = first_name
        self.last_name = last_name
        self.age = age
        self.country = country

    def describe_user(self):
        if self.age > 0 and self.age <= 1:
            print(f"my name is {self.first_name} {self.last_name}, i'm from {self.country} and {self.age} year old")
        elif self.age > 1:
            print(
                f"my name is {self.first_name} {self.last_name}, i'm from {self.country} and {self.age} years old")
        else:
            print("please enter valid age")

    def greet_user(self):
        print(f"hi {self.first_name} {self.last_name}!")

user_1 = User("mark", "jackson", 53, "usa")
user_2 = User("reggie", "miller", 47, "usa")

print(user_1.describe_user())
print(user_1.greet_user())
